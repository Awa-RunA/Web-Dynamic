@model Contact
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    string title = ViewBag.Action + " Contact";
    ViewData["Title"] = title;
}
<h1 class=" p-3 mb-2 bg-dark text-white"> Contact Manager</h1>
<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Fname" class="form-label">First Name</label>
        <input aps-for="Fname" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Lname" class="form-label">Last Name</label>
        <input aps-for="Lname" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Phone" class="form-label">Phone</label>
        <input aps-for="Phone" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input aps-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <div class="mb-3">
            <label asp-for="Category" class="form-label">Category</label>
            <input class="form-control" list="Category" name="Category-Choice" value="Select a category" />

           <datalist id="Category" >
                <option >Family</option>
                <option >Friend</option>
                <option >Work</option>
           </datalist>
        </div>
    </div>

    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-dark">Save</button>
    <button asp-controller="Home" asp-action="Index" class="btn btn-dark">Cancel</button>
</form>
