@model List<Contact>
@{
    ViewData["Title"] = "Contact Manager";
}

<h1 class=" p-3 mb-2 bg-dark text-white" > Contact Manager</h1>
<div class="mb-2">
    <a asp-controller="Contact" asp-action="Add">Add Contact</a>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th> Phone</th>
            <th>Email</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td><a asp-controller="Contact" asp-action="Details" asp-route-id="@contact.Id">@contact.Fname</a></td>
                <td><a asp-controller="Contact" asp-action="Details" asp-route-id="@contact.Id">@contact.Lname</a></td>
                <td>@contact.Phone</td>
                <td>@contact.Email</td>
                <td>@contact.Category</td>
            </tr>
        }
    </tbody>
</table>